SQL> insert into Employees values(101,'Sam',4000);

1 row created.

SQL> declare
  2  name varchar(10);
  3  sal int(20);
  4  begin
  5  select fname,salary into name,sal from Employees where eid=100;
  6  dbms_output.Put_line('Name:'||name);
  7  dbms_output.Put_line('Salary:'||sal);
  8  end;
  9  /
